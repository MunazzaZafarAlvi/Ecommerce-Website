<h1 class="text-3xl font-bold text-center mb-8">All Products</h1>

<div class="products grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @products.each do |product| %>
    <div class="product bg-white p-4 rounded-lg shadow-md">
      <div class="product-image mb-4">
        <% if product.image.attached? %>
          <%= image_tag url_for(product.image), alt: product.name, class: "w-full h-48 object-cover rounded-lg" %>
        <% else %>
          <%= image_tag 'placeholder.png', alt: 'Placeholder image', class: "w-full h-48 object-cover rounded-lg" %>
        <% end %>
      </div>
      <h2 class="text-lg font-bold mb-2"><%= product.name %></h2>
      <p class="text-sm text-gray-700 mb-4"><%= product.body_description %></p>
      <p class="text-sm text-gray-900 font-semibold">Price: <%= number_to_currency(product.price) %></p>
    </div>
  <% end %>
</div>
