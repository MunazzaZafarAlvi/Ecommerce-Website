<h1 class="text-2xl font-bold"><%= @category.capitalize %> Products</h1>

<% if @products.any? %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-6">
    <% @products.each do |product| %>
      <div class="border rounded-lg shadow-md overflow-hidden">
        <% if product.image.attached? %>
          <%= image_tag product.image, alt: product.name, class: "w-full h-48 object-cover" %>
        <% else %>
          <div class="w-full h-48 bg-gray-200 flex items-center justify-center">
            <span>No Image Available</span>
          </div>
        <% end %>

        <div class="p-4">
          <h2 class="text-lg font-semibold"><%= product.name %></h2>
          <p class="text-gray-700"><%= number_to_currency(product.price) %></p>
       </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="text-gray-600 mt-4">No products available in this category.</p>
<% end %>
